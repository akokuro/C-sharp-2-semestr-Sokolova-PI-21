@model IEnumerable<AbstractRepairOrderServiceDAL.ViewModel.PlumbingViewModel>

@{
    ViewBag.Title = "IndexPlumbing";
}

<h2>IndexPlumbing</h2>

<p>
    @Html.ActionLink("Create New", "CreatePlumbing")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.PlumbingName)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PlumbingName)
            </td>
            <td>
                @Html.ActionLink("Edit", "EditPlumbing", new { id = item.Id }) |
                @Html.ActionLink("Delete", "DeletePlumbing", new { id = item.Id })
            </td>
        </tr>
    }

</table>