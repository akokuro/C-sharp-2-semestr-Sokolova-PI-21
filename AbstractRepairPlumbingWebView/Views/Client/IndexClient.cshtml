@model IEnumerable<AbstractRepairOrderServiceDAL.ViewModel.ClientViewModel>

@{
    ViewBag.Title = "IndexClient";
}

<h2>IndexClient</h2>

<p>
    @Html.ActionLink("Create New", "CreateClient")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ClientFIO)
        </th>
        <th></th>
    </tr>
    
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ClientFIO)
            </td>
            <td>
                @Html.ActionLink("Edit", "EditClient", new { id = item.Id }) |
                @Html.ActionLink("Delete", "DeleteClient", new { id = item.Id })
            </td>
        </tr>
    }

</table>