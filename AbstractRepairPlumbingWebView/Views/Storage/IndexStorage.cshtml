@model IEnumerable<AbstractRepairOrderServiceDAL.ViewModel.StorageViewModel>

@{
    ViewBag.Title = "IndexStorage";
}

<h2>IndexStorage</h2>

<p>
    @Html.ActionLink("Create New", "CreateStorage")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.StorageName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.StorageName)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Storages", new { id=item.Id }) |
